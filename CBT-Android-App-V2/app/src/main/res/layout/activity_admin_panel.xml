<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/admin_background"
    tools:context=".ui.admin.AdminPanelActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/admin_primary"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
            app:title="@string/admin_panel_title"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <!-- Welcome Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Welcome, Administrator"
                    android:textColor="@color/admin_text"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/roboto_bold" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_panel_subtitle"
                    android:textColor="@color/admin_text_secondary"
                    android:textSize="16sp"
                    app:fontFamily="@font/roboto_regular" />

            </LinearLayout>

            <!-- CBT URL Configuration Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_cbt_url"
                style="@style/Widget.CBTProctoring.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="URL Icon"
                            android:src="@drawable/ic_link"
                            app:tint="@color/admin_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/admin_cbt_url_label"
                            android:textColor="@color/admin_text"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- URL Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_cbt_url"
                        style="@style/Widget.CBTProctoring.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/admin_cbt_url_hint"
                        app:boxStrokeColor="@color/admin_primary"
                        app:startIconDrawable="@drawable/ic_web"
                        app:startIconTint="@color/admin_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_cbt_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"
                            android:text="@string/default_cbt_url"
                            android:textColor="@color/admin_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Save Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_url"
                        style="@style/Widget.CBTProctoring.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/admin_save_button"
                        app:backgroundTint="@color/admin_primary"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Admin PIN Configuration Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_admin_pin"
                style="@style/Widget.CBTProctoring.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="PIN Icon"
                            android:src="@drawable/ic_lock"
                            app:tint="@color/admin_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/admin_change_pin_button"
                            android:textColor="@color/admin_text"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- Current PIN Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_current_pin"
                        style="@style/Widget.CBTProctoring.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/admin_current_pin_label"
                        app:boxStrokeColor="@color/admin_primary"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/admin_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_current_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="6"
                            android:textColor="@color/admin_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- New PIN Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_new_pin"
                        style="@style/Widget.CBTProctoring.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/admin_new_pin_label"
                        app:boxStrokeColor="@color/admin_primary"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/ic_lock_outline"
                        app:startIconTint="@color/admin_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_new_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="6"
                            android:textColor="@color/admin_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirm PIN Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_confirm_pin"
                        style="@style/Widget.CBTProctoring.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/admin_confirm_pin_label"
                        app:boxStrokeColor="@color/admin_primary"
                        app:endIconMode="password_toggle"
                        app:startIconDrawable="@drawable/ic_lock_outline"
                        app:startIconTint="@color/admin_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_confirm_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="6"
                            android:textColor="@color/admin_text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Change PIN Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_change_pin"
                        style="@style/Widget.CBTProctoring.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/admin_change_pin_button"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/admin_secondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_actions"
                style="@style/Widget.CBTProctoring.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Actions Icon"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/admin_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Exam Actions"
                            android:textColor="@color/admin_text"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- Start Exam Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_start_exam"
                        style="@style/Widget.CBTProctoring.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/admin_start_exam_button"
                        app:backgroundTint="@color/success"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_play_arrow"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                    <!-- Exit App Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_exit_app"
                        style="@style/Widget.CBTProctoring.Button.Danger"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/admin_exit_app_button"
                        app:backgroundTint="@color/error"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_exit_to_app"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Status Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_status"
                style="@style/Widget.CBTProctoring.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Status Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Status Icon"
                            android:src="@drawable/ic_info"
                            app:tint="@color/admin_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="System Status"
                            android:textColor="@color/admin_text"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- Status Items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Device Admin Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/indicator_device_admin"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_status_indicator"
                                app:statusColor="@color/success" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Device Admin"
                                android:textColor="@color/admin_text"
                                android:textSize="14sp"
                                app:fontFamily="@font/roboto_regular" />

                            <TextView
                                android:id="@+id/tv_device_admin_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active"
                                android:textColor="@color/success"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/roboto_medium" />

                        </LinearLayout>

                        <!-- Camera Permission Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/indicator_camera"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_status_indicator"
                                app:statusColor="@color/success" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Camera Permission"
                                android:textColor="@color/admin_text"
                                android:textSize="14sp"
                                app:fontFamily="@font/roboto_regular" />

                            <TextView
                                android:id="@+id/tv_camera_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Granted"
                                android:textColor="@color/success"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/roboto_medium" />

                        </LinearLayout>

                        <!-- Network Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/indicator_network"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/bg_status_indicator"
                                app:statusColor="@color/success" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Network Connection"
                                android:textColor="@color/admin_text"
                                android:textSize="14sp"
                                app:fontFamily="@font/roboto_regular" />

                            <TextView
                                android:id="@+id/tv_network_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connected"
                                android:textColor="@color/success"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/roboto_medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Success Message Snackbar -->
    <com.google.android.material.snackbar.Snackbar
        android:id="@+id/snackbar_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/success"
        android:textColor="@color/white"
        app:actionTextColor="@color/white"
        app:cornerRadius="12dp"
        app:maxInlineActionWidth="120dp" />

    <!-- Error Message Snackbar -->
    <com.google.android.material.snackbar.Snackbar
        android:id="@+id/snackbar_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/error"
        android:textColor="@color/white"
        app:actionTextColor="@color/white"
        app:cornerRadius="12dp"
        app:maxInlineActionWidth="120dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 