<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Theme -->
    <style name="Theme.CBTProctoring" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_disabled</item>
        
        <!-- Shape styles -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.CBTProctoring.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CBTProctoring.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.CBTProctoring.LargeComponent</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.CBTProctoring.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.CBTProctoring.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.CBTProctoring.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.CBTProctoring.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.CBTProctoring.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.CBTProctoring.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.CBTProctoring.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.CBTProctoring.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CBTProctoring.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.CBTProctoring.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.CBTProctoring.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.CBTProctoring.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.CBTProctoring.Overline</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.CBTProctoring.Splash" parent="Theme.CBTProctoring">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    
    <!-- Admin Theme -->
    <style name="Theme.CBTProctoring.Admin" parent="Theme.CBTProctoring">
        <item name="android:colorBackground">@color/admin_background</item>
        <item name="colorSurface">@color/admin_surface</item>
        <item name="colorPrimary">@color/admin_primary</item>
        <item name="colorSecondary">@color/admin_secondary</item>
        <item name="android:textColorPrimary">@color/admin_text</item>
        <item name="android:textColorSecondary">@color/admin_text_secondary</item>
    </style>
    
    <!-- Fullscreen Exam Theme -->
    <style name="Theme.CBTProctoring.Fullscreen" parent="Theme.CBTProctoring">
        <item name="android:colorBackground">@color/exam_background</item>
        <item name="colorSurface">@color/exam_surface</item>
        <item name="android:textColorPrimary">@color/exam_text</item>
        <item name="android:textColorSecondary">@color/exam_text_secondary</item>
        <item name="android:statusBarColor">@color/exam_background</item>
        <item name="android:navigationBarColor">@color/exam_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    
    <!-- Error Theme -->
    <style name="Theme.CBTProctoring.Error" parent="Theme.CBTProctoring">
        <item name="colorPrimary">@color/error</item>
        <item name="colorSecondary">@color/warning</item>
        <item name="android:statusBarColor">@color/error_dark</item>
        <item name="android:navigationBarColor">@color/error_dark</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.CBTProctoring.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.CBTProctoring.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.CBTProctoring.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.CBTProctoring.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Headline4" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Headline5" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Headline6" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Subtitle1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Subtitle2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.CBTProctoring.Overline" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.CBTProctoring.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/button_text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>
    
    <style name="Widget.CBTProctoring.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/button_secondary</item>
        <item name="android:textColor">@color/button_secondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="rippleColor">@color/ripple_secondary</item>
    </style>
    
    <style name="Widget.CBTProctoring.Button.Danger" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@color/button_text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>
    
    <!-- Input Styles -->
    <style name="Widget.CBTProctoring.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border_focused</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColorHint">@color/input_hint</item>
    </style>
    
    <style name="Widget.CBTProctoring.TextInputLayout.Error" parent="Widget.CBTProctoring.TextInputLayout">
        <item name="boxStrokeColor">@color/input_border_error</item>
        <item name="errorTextColor">@color/error</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.CBTProctoring.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Progress Bar Styles -->
    <style name="Widget.CBTProctoring.ProgressBar" parent="Widget.Material3.ProgressIndicator.Linear">
        <item name="trackColor">@color/gray_200</item>
        <item name="indicatorColor">@color/primary</item>
        <item name="trackThickness">4dp</item>
    </style>
    
    <!-- Snackbar Styles -->
    <style name="Widget.CBTProctoring.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">@color/surface_elevated</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="Widget.CBTProctoring.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
</resources> 