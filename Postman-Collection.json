    {
      "name": "3. Proctoring Session",
      "item": [
        {
          "name": "Start Session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.success && jsonData.data.session_id) {",
                  "        pm.collectionVariables.set('session_id', jsonData.data.session_id);",
                  "        console.log('Session ID saved: ' + jsonData.data.session_id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"participant_id\": \"student_123\",\n  \"device_id\": \"android_device_abc123\",\n  \"device_model\": \"Samsung Galaxy S21\",\n  \"android_version\": \"12\",\n  \"app_version\": \"1.0.0\",\n  \"device_info\": {\n    \"manufacturer\": \"Samsung\",\n    \"model\": \"SM-G991B\",\n    \"android_version\": \"12\",\n    \"api_level\": 31,\n    \"screen_resolution\": \"1080x2400\",\n    \"memory_total\": \"8GB\",\n    \"storage_available\": \"45GB\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/proctoring/session/start",
              "host": ["{{base_url}}"],
              "path": ["proctoring", "session", "start"]
            }
          }
        },
        {
          "name": "End Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\",\n  \"notes\": \"Exam completed successfully\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/proctoring/session/{{session_id}}/end",
              "host": ["{{base_url}}"],
              "path": ["proctoring", "session", "{{session_id}}", "end"]
            }
          }
        },
        {
          "name": "Get Session Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/proctoring/session/{{session_id}}/summary",
              "host": ["{{base_url}}"],
              "path": ["proctoring", "session", "{{session_id}}", "summary"]
            }
          }
        }
